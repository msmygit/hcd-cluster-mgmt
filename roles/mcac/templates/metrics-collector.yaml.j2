---
# MCAC (Metric Collector for Apache Cassandra) Configuration
# Generated by Ansible

# Enable/disable metrics collection
enabled: {{ mcac_metrics_enabled | lower }}

# Sampling interval in seconds
sampling_interval: {{ mcac_sampling_interval }}

# Prometheus exporter configuration
prometheus:
  enabled: {{ mcac_prometheus_enabled | lower }}
  port: {{ mcac_prometheus_port }}
  # Bind to all interfaces to allow external scraping
  host: "0.0.0.0"

{% if mcac_graphite_enabled %}
# Graphite reporter configuration
graphite:
  enabled: true
  host: "{{ mcac_graphite_host }}"
  port: {{ mcac_graphite_port }}
  protocol: "tcp"
  prefix: "cassandra.{{ cluster_name }}.{{ inventory_hostname }}"
{% endif %}

# Metrics to collect
metrics:
  jvm:
    enabled: {{ mcac_collect_jvm_metrics | lower }}
    # JVM memory, GC, threads, etc.
    
  os:
    enabled: {{ mcac_collect_os_metrics | lower }}
    # CPU, memory, disk, network
    
  cassandra:
    enabled: {{ mcac_collect_cassandra_metrics | lower }}
    # Cassandra-specific metrics
    
# Logging configuration
logging:
  level: "{{ mcac_log_level }}"
  directory: "{{ mcac_log_dir }}"
  
# Metric filters (optional)
# Use to include/exclude specific metrics
filters:
  # Include all metrics by default
  include:
    - ".*"
  # Exclude noisy or unnecessary metrics
  exclude:
    - "org.apache.cassandra.metrics.ThreadPools.*.Pending"
    - "org.apache.cassandra.metrics.DroppedMessage.*"